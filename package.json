{
  "name": "clean",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "node-sass-chokidar": "^1.3.3",
    "normalize.css": "^8.0.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-scripts": "1.1.5",
    "webfontloader": "^1.6.28"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "sass-watch": "node-sass --watch src/scss -o src/css",
    "build-css": "node-sass-chokidar src/scss -o src/css",
    "watch-css": "yarn build-css && node-sass-chokidar src/scss -o src/css --watch --recursive --usePolling --polling-interval 500",
    "start-dev": "npm-run-all --parallel start watch-css"
  },
  "devDependencies": {
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3"
  }
}
